<header class="ui center aligned container">
  <div class="ui sizer vertical segment">
    <h2 class="ui header">
      <div class="content">
        Post and Sell Your Item
      </div>
    </h2>
    <p></p>
  </div>
</header>
<main>
  <div class="ui center aligned container">
    <div class="ui two column centered grid">
      <div class="column">
        <form class="ui large form" id="sellItem" enctype="multipart/form-data" method="POST">
          <div class="ui inverted stacked segment">
            <div class="field">
              <div class="ui left icon input">
                <i class="tag icon"></i>
                <input type="text" name="item" class="item itemName" placeholder="Name of Item" />
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="money bill alternate outline icon"></i>
                <input type="text" name="price" class="price" placeholder="Price of Item" />
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="plus square outline icon"></i>
                <input type="text" class="quantity" name="quantity" placeholder="Item Quantity" />
              </div>
            </div>
            <div class="field" enctype="multipart/form-data">
              <div class="ui action input">
                <input type="file" name="userImg" id="userImg">
              </div>
            </div>
            <div class="field">
              <label>Description of Item</label>
              <textarea class="description"></textarea>
            </div>
            <div class="field">
              <select id="categories" class="ui inverted dropdown">
                <option value="">Categories</option>
                <option class="item" value="clothing">Clothing</option>
                  <option class="item" value="household">Household</option>
                   <option class="item" value="accessories">Accessories</option>
                   <option class="item" value="auto">Auto</option>
                  <option class="item" value="electronics">Electronics</option>
                  <option class="item" value="services">Services</option>
                  <option class="item" value="outdoors">Outdoors</option>
                  <option class="item" value="sports">Sports</option>
                  <option class="item" value="pets">Pets</option>
              </select>
            </div>
            <button type="submit" class="ui inverted fluid large purple submit button">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>
<script src="/assets/js/item.js"></script>