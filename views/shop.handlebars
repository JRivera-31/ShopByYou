    <header class="ui center aligned container">
      <div class="ui sizer vertical segment">
        <div class="ui huge header">ShopByYou</div>
      </div>
    </header>
     <main class="ui center aligned container">
      <div class="ui four cards">
        <div class="ui stackable four column grid">
          {{#each items}} 
          <div class="column">
            <div id="itemcard" class="ui card">
              <div class="content">
                <div class="header">
                  <img
                    src="{{dataValues.image}}"
                    class="ui right spaced image"
                  />
                <h3>{{dataValues.item_name}}</h3>
                </div>
                <div class="description ui left aligned">
                  <p>
                      {{dataValues.description}}    
                  </p>
                  <div class="ui left aligned">
                    <span class="price"><strong>Price: </strong>${{dataValues.price}}</span>
                  </div>
                  <div class="ui left aligned">
                    <span id="itemId"><strong>Product ID: </strong>{{dataValues.id}}</span>
                  </div>
                  <div class="ui left aligned">
                    <span class="category"><strong>Category: </strong>{{dataValues.category}}</span>
                  </div>
                  <div class="ui left aligned">
                    <span class="date"><strong>Date Posted: </strong> {{dataValues.createdAt}}</span>
                  </div>
                </div>
              </div>
              <div class="ui bottom attached buttons">
                <button type="button" data-id="{{dataValues.id}}" id="purchasebutton" class="ui inverted purple button">
                  <i class="dollar sign icon"></i>
                  Purchase
                </button>
                
              </div>
            </div>
          </div>
        {{/each}}
        </div>
      </div>
    </main>

    <script>
      $("#purchasebutton").on("click", function (event) {
        let id = $(this).data("id")
        
        console.log(id)

        $.ajax({
            type: "delete",
            url: "/api/deleteitem/" + id
        }).then(function(deletedItem) {
            console.log(console.log(deletedItem))
            window.location.reload()
            return alert("Thanks for purchasing!")
        }).catch(function(err) {
          console.log(err)
        })
    })
    </script>
