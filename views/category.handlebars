  <header class="ui center aligned container">
      <div class="ui sizer vertical segment">
        <div class="ui huge header">Sorted By Chosen Category</div>
        <p></p>
      </div>
    </header>
    <main class="ui center aligned container">      
      <div class="ui four cards">
        <div class="ui stackable four column grid">
          {{#each items}}
          <div class="column">
            <div class="ui card">
              <div class="content">
                <div class="header">
                  <img
                    src="{{dataValues.image}}"
                    class="ui right spaced image"
                  />
                <h3>{{dataValues.item_name}}</h3>
                </div>
                <div class="description ui left aligned">
                  <p>
                      {{dataValues.description}}    
                  </p>
                  <div class="ui left aligned">
                    <span class="price"><strong>Price: </strong>${{dataValues.price}}</span>
                  </div>
                  <div class="ui left aligned">
                    <span class="quantity"><strong>Quantity: </strong>{{dataValues.quantity}}</span>
                  </div>
                  <div class="ui left aligned">
                    <span class="category"><strong>Category: </strong>{{dataValues.category}}</span>
                  </div>
                  <div class="ui left aligned">
                    <span class="date"><strong>Date Posted: </strong> {{dataValues.createdAt}}</span>
                  </div>
                </div>
              </div>
              <div class="ui two bottom attached buttons">
                <button type="submit" class="ui inverted purple button">
                  <i class="add icon"></i>
                  Cart
                </button>
                <button type="submit" class="ui inverted pink button">
                  <i class="heart outline like icon"></i>
                  Favorite
                </button>
              </div>
            </div>
          </div>
        {{/each}}
        </div>
      </div>
    </main>