<nav class="ui fixed inverted menu">
      <div class="ui container">
        <div class="header item">ShopByYou</div>
        <a href="/" class="item">Home</a>
        <div class="ui simple dropdown item">
          <a href="/category"> Categories <i class="dropdown icon"></i></a>
          <div class="menu">
            <a class="item" href="#">Women</a>
            <a class="item" href="#">Men</a>
            <div class="divider"></div>
            <div class="item" href="#">Household</div>
            <a class="item" href="#">Accessories</a>
          </div>
        </div>
        <a href="/favourite" class="item">Favorites</a>
        <a href="/sell" class="item">Sell</a>
        <div class="right menu">
          <div class="header item">Welcome:</div>
          <a href="/cart" class="item">
            <i class="shopping cart icon"></i>Shopping Cart</a>
          <div class="item">
            <a class="ui inverted violet button" href="/">Logout</a>
          </div>
        </div>
      </div>
    </nav>
    <header class="ui center aligned container">
      <div class="ui sizer vertical segment">
        <div class="ui huge header">Categories</div>
        <p></p>
      </div>
    </header>

    <main class="ui center aligned container">
        {{#each Item}}
        
      <div class="ui four cards">
        <div class="ui stackable four column grid">
          <div class="column">
            <div class="ui card">
              <div class="content">
                <div class="header">
                  <img
                    src="https://assets.awwwards.com/awards/images/2013/06/secret-life-heroes%20(44).jpg"
                    class="ui right spaced image"
                  />
                  <h3>{{item_name}}</h3>
                </div>
                <div class="description ui left aligned">
                  <p>
                    {{description}}
                  </p>
                  <div class="meta ui left aligned">
                    <span class="price">Price: {{price}} </span>
                  </div>
                  <div class="meta ui left aligned">
                    <span class="quantity">Quantity: {{quantity}} </span>
                  </div>
                  <div class="meta ui left aligned">
                    <span class="category">Category: {{category}} </span>
                  </div>
                  <div class="meta ui left aligned">
                    <span class="date">Date Posted: {{createdAt}}</span>
                  </div>
                </div>
              </div>
              <div class="ui two bottom attached buttons">
                <div class="ui inverted purple button">
                  <i class="add icon"></i>
                  Cart
                </div>
                <div class="ui inverted pink button">
                  <i class="heart outline like icon"></i>
                  Favorite
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
      {{/each}}
    </main>